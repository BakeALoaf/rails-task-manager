<h1>Task list</h1>

<% @tasks.each do |task| %>
<%= form_with model: task do |t| %>
<%= t.check_box :completed %>
<%= link_to task.title, task_path(task)%>
<%=link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
<i>. </i><i class="fa fa-trash" aria-hidden="true"></i>
<% end %>

<% end %>
<% end %>
<%= link_to "Add a task", tasks_new_path %>
